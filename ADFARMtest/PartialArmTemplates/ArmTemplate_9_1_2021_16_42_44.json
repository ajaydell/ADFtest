{
	"$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
	"contentVersion": "1.0.0.0",
	"parameters": {
		"factoryName": {
			"type": "string",
			"metadata": "Data Factory name",
			"defaultValue": "ADFARMtest"
		}
	},
	"variables": {
		"factoryId": "[concat('Microsoft.DataFactory/factories/', parameters('factoryName'))]"
	},
	"resources": [
		{
			"name": "[concat(parameters('factoryName'), '/cicd')]",
			"type": "Microsoft.DataFactory/factories/pipelines",
			"apiVersion": "2018-06-01",
			"properties": {
				"activities": [
					{
						"name": "Set variable1",
						"type": "SetVariable",
						"dependsOn": [],
						"userProperties": [],
						"typeProperties": {
							"variableName": "test2",
							"value": {
								"value": "@concat('https//',pipeline().globalParameters.purview,'.catalog.purview.azure.com/api/atlas/v2/search/suggest')",
								"type": "Expression"
							}
						}
					}
				],
				"parameters": {
					"pram1": {
						"type": "string",
						"defaultValue": "ajay"
					},
					"pram2": {
						"type": "string",
						"defaultValue": "aj"
					},
					"databricksurl": {
						"type": "string"
					}
				},
				"variables": {
					"test1": {
						"type": "String",
						"defaultValue": "cicd"
					},
					"test2": {
						"type": "String"
					}
				},
				"annotations": []
			},
			"dependsOn": [
				"[variables('factoryId')]"
			]
		},
		{
			"name": "[concat(parameters('factoryName'), '/AzureDatabricks1')]",
			"type": "Microsoft.DataFactory/factories/linkedServices",
			"apiVersion": "2018-06-01",
			"properties": {
				"parameters": {
					"databricksurl": {
						"type": "String"
					},
					"clusterid": {
						"type": "String"
					}
				},
				"annotations": [],
				"type": "AzureDatabricks",
				"typeProperties": {
					"domain": "@linkedService().databricksurl",
					"accessToken": {
						"type": "SecureString",
						"value": "**********"
					},
					"existingClusterId": "@linkedService().clusterid"
				}
			},
			"dependsOn": [
				"[variables('factoryId')]"
			]
		}
	]
}