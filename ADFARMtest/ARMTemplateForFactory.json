{
	"$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
	"contentVersion": "1.0.0.0",
	"parameters": {
		"factoryName": {
			"type": "string",
			"metadata": "Data Factory name",
			"defaultValue": "ADFARMtest"
		},
		"dataFactory_properties_globalParameters_test_value": {
			"type": "string",
			"defaultValue": "ADFARMtest"
		},
		"dataFactory_properties_globalParameters_dilip_value": {
			"type": "string",
			"defaultValue": "DE_MAster"
		},
		"dataFactory_location": {
			"type": "string",
			"defaultValue": "westus"
		},
		"dataFactory_identity_type": {
			"type": "string",
			"defaultValue": "SystemAssigned"
		}
	},
	"variables": {
		"factoryId": "[concat('Microsoft.DataFactory/factories/', parameters('factoryName'))]"
	},
	"resources": [
		{
			"name": "[concat(parameters('factoryName'), '/cicd')]",
			"type": "Microsoft.DataFactory/factories/pipelines",
			"apiVersion": "2018-06-01",
			"properties": {
				"activities": [
					{
						"name": "Set variable1",
						"type": "SetVariable",
						"dependsOn": [],
						"userProperties": [],
						"typeProperties": {
							"variableName": "test2",
							"value": {
								"value": "@variables('test1')",
								"type": "Expression"
							}
						}
					}
				],
				"parameters": {
					"pram1": {
						"type": "string",
						"defaultValue": "ajay"
					}
				},
				"variables": {
					"test1": {
						"type": "String",
						"defaultValue": "cicd"
					},
					"test2": {
						"type": "String"
					}
				},
				"annotations": []
			},
			"dependsOn": [
				"[variables('factoryId')]"
			]
		},
		{
			"name": "[parameters('factoryName')]",
			"type": "Microsoft.DataFactory/factories",
			"apiVersion": "2018-06-01",
			"properties": {
				"globalParameters": {
					"test": {
						"type": "string",
						"value": "[parameters('dataFactory_properties_globalParameters_test_value')]"
					},
					"dilip": {
						"type": "string",
						"value": "[parameters('dataFactory_properties_globalParameters_dilip_value')]"
					}
				}
			},
			"dependsOn": [],
			"location": "[parameters('dataFactory_location')]",
			"identity": {
				"type": "[parameters('dataFactory_identity_type')]"
			}
		}
	]
}